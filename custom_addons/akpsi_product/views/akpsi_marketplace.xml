<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="akpsi_marketplace_tree_view" model="ir.ui.view">
        <field name="name">akpsi.marketplace.tree.view</field>
        <field name="model">marketplace</field>
        <field name="arch" type="xml">
            <tree string="Marketplace">
                <field name="mp_name"/>
            </tree>
        </field>
    </record>
    <record id="akpsi_marketplace_form_view" model="ir.ui.view">
        <field name="name">akpsi.marketplace.form.view</field>
        <field name="model">marketplace</field>
        <field name="arch" type="xml">
            <form string="Marketplace">
                <sheet>
                    <div class="oe_title">
                        <label for="mp_name"/>
                        <h1>
                            <field name="mp_name" readonly="1"/>
                        </h1>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="akpsi_marketplace_action" model="ir.actions.act_window">
            <field name="name">Marketplace</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">marketplace</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('akpsi_marketplace_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('akpsi_marketplace_form_view')})]"/>
        </record>
</odoo>